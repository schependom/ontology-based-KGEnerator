# More sophisticated family ontology (work in progress)

@prefix : <http://example.org/family#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:Person rdf:type owl:Class .
:Man rdf:type owl:Class ;
     rdfs:subClassOf :Person .
:Woman rdf:type owl:Class ;
       rdfs:subClassOf :Person ;
       owl:disjointWith :Man .

:Parent rdf:type owl:Class ;
       rdfs:subClassOf :Person .

:Father rdf:type owl:Class ;
        rdfs:subClassOf :Man , :Parent .

:Mother rdf:type owl:Class ;
        rdfs:subClassOf :Woman , :Parent .
        
:Grandparent rdf:type owl:Class ;
    rdfs:subClassOf :Person .

# Rule: A Parent of a Parent is a Grandparent
# (X, hasParent, Y), (Y, type, Parent) -> (X, type, Grandparent)
[ a owl:Restriction ;
  owl:onProperty :hasParent ;
  owl:someValuesFrom :Parent
] rdfs:subClassOf :Grandparent .


:hasParent rdf:type owl:ObjectProperty ;
           rdfs:range :Parent ;
           rdf:type owl:IrreflexiveProperty .

:hasChild rdf:type owl:ObjectProperty ;
          rdfs:domain :Parent ;
          owl:inverseOf :hasParent ;
            rdf:type owl:IrreflexiveProperty .

:hasFather rdf:type owl:ObjectProperty ;
           rdfs:subPropertyOf :hasParent ;
           rdfs:range :Father ;
           rdf:type owl:IrreflexiveProperty .

:hasMother rdf:type owl:ObjectProperty ;
           rdfs:subPropertyOf :hasParent ;
           rdfs:range :Mother .

:hasSibling rdf:type owl:ObjectProperty ;
            rdf:type owl:SymmetricProperty ;
            rdf:type owl:IrreflexiveProperty .

:hasAncestor rdf:type owl:ObjectProperty ;
             rdf:type owl:TransitiveProperty ;
             rdf:type owl:IrreflexiveProperty .

# :hasGrandparent owl:propertyChainAxiom ( :hasParent :hasParent ) .

# Rule: (X, hasParent, Y) -> (X, hasAncestor, Y)
:hasParent rdfs:subPropertyOf :hasAncestor .

:ssn rdf:type owl:DatatypeProperty ;
     rdf:type owl:FunctionalProperty ;
     rdfs:domain :Person ;
     rdfs:range xsd:string .